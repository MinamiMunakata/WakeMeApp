<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:tag="@string/card_view_tag"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/radius_btn"
        card_view:cardBackgroundColor="@color/white"
        android:elevation="5dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_dialog"
            android:weightSum="9"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/card_icon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                card_view:srcCompat="@drawable/com_facebook_profile_picture_blank_square" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="6"
                android:gravity="center_vertical"
                android:padding="@dimen/padding_dialog_text">
                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textSize="@dimen/text_h3"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/card_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="status"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/card_alart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                card_view:srcCompat="@drawable/ico_alart" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>