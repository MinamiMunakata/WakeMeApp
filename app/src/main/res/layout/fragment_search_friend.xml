<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".SearchFriendFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginRight="@dimen/space30"
        android:layout_marginLeft="@dimen/space30"
        android:layout_marginTop="@dimen/space10"
        android:weightSum="10"
        android:gravity="center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/enter_email_to_search"
            android:layout_weight="2"
            android:textSize="@dimen/text_h3"/>

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="@string/hint_email"
            android:padding="@dimen/space10"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_field"
            android:layout_weight="4"
            android:layout_marginTop="@dimen/space10"
            android:layout_marginBottom="@dimen/space10"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Search Email"
            android:background="@drawable/rounded_button"
            android:layout_weight="4"/>
    </LinearLayout>


</LinearLayout>