<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_bubbles"
    android:paddingLeft="@dimen/pudding_bubbles_to_wall"
    android:paddingRight="@dimen/padding_bubbles_to_the_other_side"
    android:clipToPadding="false">

    <ImageView
        android:id="@+id/message_avatar"
        android:layout_width="@dimen/message_avatar"
        android:layout_height="@dimen/message_avatar"
        app:srcCompat="@drawable/user_icon"
        android:background="@drawable/circle"
        android:layout_alignBottom="@+id/others_bubble"/>
    <TextView
        android:id="@+id/others_bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/others_message"
        android:text="test test test test test test test test test test test test as"
        android:layout_toRightOf="@+id/message_avatar"
        android:textSize="@dimen/message_text_size"
        android:padding="@dimen/padding_inside_bubble"
        android:layout_marginLeft="@dimen/margin_bw_items"
        android:elevation="@dimen/elevation"
        />

</RelativeLayout>