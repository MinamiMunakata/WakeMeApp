<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/rounded_field"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_margin="@dimen/small_vertical_space_bw_item">
    <ImageView
        android:layout_marginTop="@dimen/small_vertical_space_bw_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_done"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/successfully_added"
        android:layout_marginVertical="@dimen/small_vertical_space_bw_item"
        android:layout_marginHorizontal="@dimen/vertical_space_bw_items"/>


</LinearLayout>