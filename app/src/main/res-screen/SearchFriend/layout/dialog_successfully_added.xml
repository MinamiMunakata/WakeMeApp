<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/border_bottom"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
    <ImageView
        android:layout_marginTop="@dimen/vertical_space_bw_items"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_done"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/successfully_added"
        android:layout_marginVertical="@dimen/small_vertical_space_bw_item"
        android:layout_marginHorizontal="@dimen/vertical_space_bw_items"/>
    


</LinearLayout>