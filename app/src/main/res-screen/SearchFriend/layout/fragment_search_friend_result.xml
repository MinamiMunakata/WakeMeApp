<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:paddingVertical="@dimen/vertical_space_bw_items"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen.SearchFriend.SearchFriendResultFragment"
    android:background="@color/colorBackground"
    android:gravity="center_horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_holder"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ico_default_avator"
        android:backgroundTint="@color/colorBackground"
        android:layout_marginVertical="@dimen/vertical_space_bw_items"/>
    <com.minami_m.project.android.wakemeapp.CustomBasicTextView
        android:id="@+id/name_holder"
        android:textSize="@dimen/text_h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Name"/>


</LinearLayout>