<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:topRightRadius="@dimen/dialog_radius"
                android:topLeftRadius="@dimen/dialog_radius"/>
            <stroke android:width="1dp" android:color="@color/colorMyAccent"/>
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    <item android:top="-1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <corners android:topLeftRadius="@dimen/dialog_radius"
                android:topRightRadius="@dimen/dialog_radius"/>
            <stroke android:width="1dp" android:color="#FFFFFF" />
            <solid android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>