<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_bubbles"
    android:clipToPadding="false">
    <com.minami_m.project.android.wakemeapp.CustomBasicTextView
        android:id="@+id/receiver_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nov 2, 2018"
        android:visibility="gone"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/receiver_bubble_icon"
            android:layout_width="@dimen/message_avatar"
            android:layout_height="@dimen/message_avatar"
            android:src="@drawable/com_facebook_profile_picture_blank_portrait"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"/>
        <com.minami_m.project.android.wakemeapp.CustomBasicTextView
            android:id="@+id/received_bubble"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/received_message"
            android:text="test test test test test test test test test test test test test"
            android:layout_toRightOf="@+id/receiver_bubble_icon"
            android:textSize="@dimen/message_text_size"
            android:padding="@dimen/padding_inside_bubble"
            android:layout_marginLeft="@dimen/margin_bw_items"
            android:elevation="@dimen/elevation"/>
    </LinearLayout>

</LinearLayout>