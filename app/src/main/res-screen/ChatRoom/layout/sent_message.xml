<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/padding_bubbles"
    android:clipToPadding="false">
    <com.minami_m.project.android.wakemeapp.CustomBasicTextView
        android:id="@+id/sender_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:textColor="@color/grey"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/my_bubble"
        android:background="@drawable/sent_message"
        android:padding="5dp">
        <com.minami_m.project.android.wakemeapp.CustomBasicTextView
            android:id="@+id/sent_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/elevation"
            android:padding="@dimen/sender_bubble_text_padding"
            android:textSize="@dimen/message_text_size"/>
        <com.minami_m.project.android.wakemeapp.CustomBasicTextView
            android:id="@+id/sent_message_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/seen"
            android:layout_alignEnd="@+id/sent_message_text"
            android:layout_alignBottom="@+id/sent_message_text"
            android:textSize="12sp"
            android:layout_gravity="bottom"
            android:textColor="@color/colorMyAccent" />
    </RelativeLayout>
</LinearLayout>